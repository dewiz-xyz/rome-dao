{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "max-line-length": "off",
    "check-send-result": "off",
    "not-rely-on-time": "off",
    "multiple-sends": "off",
    "no-console": "off",
    "compiler-version": "on",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ]
  }
}
